<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layoutDescription="@xml/activity_bus_scene">

    <View
        android:id="@+id/bus_main"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@android:color/black"
 />

    <View
        android:id="@+id/bus_list"
        android:layout_width="369dp"
        android:layout_height="562dp"
        android:layout_marginStart="400dp"
        android:layout_marginLeft="400dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/bus_main"
        app:layout_constraintStart_toEndOf="@+id/bus_main"
        app:layout_constraintStart_toStartOf="@+id/bus_main"
        app:layout_constraintTop_toBottomOf="@+id/bus_main" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />


</androidx.constraintlayout.widget.ConstraintLayout>