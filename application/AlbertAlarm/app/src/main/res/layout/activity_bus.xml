    android:id="@+id/activity_bus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layoutDescription="@xml/activity_bus_scene">


    <EditText
        android:id="@+id/departure"
        android:layout_width="303dp"
        android:layout_height="63dp"
        android:hint="departure station"
        android:textSize="30dp"
        />

    <EditText
        android:id="@+id/arrival"
        android:layout_width="303dp"
        android:layout_height="63dp"
        android:hint="arrival station"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/departure"
        app:layout_constraintLeft_toLeftOf="@id/departure"
      />

    <Button
        android:layout_width="94dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:text="search"
        app:layout_constraintBottom_toBottomOf="@id/arrival"
        app:layout_constraintLeft_toRightOf="@id/arrival"
        app:layout_constraintTop_toTopOf="@id/departure"
         />

